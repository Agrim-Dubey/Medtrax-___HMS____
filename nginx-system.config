upstream medtrax_backend {
    server 127.0.0.1:8000 fail_timeout=0;
    keepalive 32;
}

# HTTP to HTTPS redirect
server {
    listen 80;
    server_name medtrax.me www.medtrax.me;
    
    # Allow certbot for SSL certificate generation
    location /.well-known/acme-challenge/ {
        root /var/www/html;
    }
    
    # Redirect all other traffic to HTTPS
    location / {
        return 301 https://medtrax.me$request_uri;
    }
}

# HTTPS Server
server {
    listen 443 ssl http2;
    server_name medtrax.me www.medtrax.me;

    # SSL Configuration (will be added by certbot)
    # ssl_certificate /etc/letsencrypt/live/medtrax.me/fullchain.pem;
    # ssl_certificate_key /etc/letsencrypt/live/medtrax.me/privkey.pem;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;

    client_max_body_size 100M;

    # Main application proxy
    location / {
        proxy_pass http://medtrax_backend;
        proxy_http_version 1.1;
        
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $server_name;
        
        # WebSocket support
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        
        # Timeouts
        proxy_connect_timeout 300;
        proxy_send_timeout 300;
        proxy_read_timeout 300;
        send_timeout 300;
        
        proxy_buffering off;
        proxy_redirect off;
    }

    # Static files
    location /static/ {
        alias /home/ubuntu/medtrax-hms/static/;
        expires 30d;
        add_header Cache-Control "public, immutable";
        access_log off;
    }

    # Media files
    location /media/ {
        alias /home/ubuntu/medtrax-hms/media/;
        expires 7d;
        add_header Cache-Control "public";
    }

    # Error pages
    error_page 500 502 503 504 /50x.html;
    location = /50x.html {
        root /usr/share/nginx/html;
    }
}